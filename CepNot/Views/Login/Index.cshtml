@model CepNot.Models.Users
@{
    ViewBag.Title = "Yetkili Giriş Paneli";
    Layout = "~/Views/Shared/_EmptyLayout.cshtml";
}

<div class="container" id="wrap">

    <div class="col-md-6 col-md-offset-3">
        <div class="form-login">

            <form action="@Url.Action("Index", "Login")" method="post">
                <h4 class="text-center text-primary ">Öğrenci Takip Sistemi</h4>
                <h4 class="text-center">Giriş Yap</h4>
                <div class="input-group">
                    @Html.TextBoxFor(x => x.Mail, new { @class = "form-control ", @placeholder = "Kullanıcı adı", @required = "required", @name = "username", @id = "username", @style = "margin-top:1px;" })
                    <label for="username" class="input-group-addon glyphicon glyphicon-user"></label>
                    @Html.ValidationMessageFor(x => x.Mail)
                </div>
                <br />
                <div class="input-group">
                    @Html.TextBoxFor(x => x.Password, new { @class = "form-control ", @placeholder = "Parola", @required = "required", @type = "password", @name = "password", @id = "password", @style = "margin-top:1px;" })
                    <label for="password" class="input-group-addon  glyphicon glyphicon-lock"></label>
                    @Html.ValidationMessageFor(x => x.Password)
                </div>
                <br />

                @{
                    if (ViewBag.Mesaj != null)
                    {
                        <p style="color:red; text-align:center;">@ViewBag.Mesaj</p>
                    }
                }
                <br />
                <div>
                    <span class="group-btn">
                        <input id="btnGiris" type="submit" value="Giriş" class="form-control" style="background-color:darkslategrey; color:white;" />
                    </span>
                </div>
            </form>
        </div>

    </div>
</div>

