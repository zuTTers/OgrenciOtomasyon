@model Users
@{
    ViewBag.Title = "Profil Detayları";
}
<br />
<div class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="header">
                <h4 class="title" style="color:blue;"><span class="pe-7s-notebook"></span> &nbsp; Profil Bilgileri</h4>
                <p class="category">Hesabın ayarlarınız..</p>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <ul class="list-group">
                        <li class="list-group-item">Ad : @Model.Name</li>
                        <li class="list-group-item">Soyad : @Model.Surname</li>
                        <li class="list-group-item">Yaş : @Model.Age</li>
                        <li class="list-group-item">Cinsiyet : @Model.Gender</li>
                        <li class="list-group-item">Mail : @Model.Mail</li>
                        <li class="list-group-item">Şifre : @Model.Password</li>
                    </ul>
                    @Html.ActionLink(" Düzenle", "UserEdit", "Home", new { id = Model.Id }, new { @class = "btn btn-warning" })
                </div>
            </div>
        </div>
    </div>
</div>

