<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" src="~/favicon.ico">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />

    <link href="~/Content/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/Content/jquery-ui.theme.min.css" rel="stylesheet" />
    <!-- Bootstrap core CSS     -->
    <link href="~/assets/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Animation library for notifications   -->
    <link href="~/assets/css/animate.min.css" rel="stylesheet" />
    <!--  Light Bootstrap Table core CSS    -->
    <link href="~/assets/css/light-bootstrap-dashboard.css" rel="stylesheet" />
    <!--  CSS for Demo Purpose, don't include it in your project     -->
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/assets/css/demo.css" rel="stylesheet" />
    <!--     Fonts and icons     -->
    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
    <link href='http://fonts.googleapis.com/css?family=Roboto:400,700,300' rel='stylesheet' type='text/css'>
    <link href="~/assets/css/pe-icon-7-stroke.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <title>Öğrenci - CepNot</title>

</head>

<body>
    <div class="wrapper">
        <div class="sidebar" data-color="blue" data-image="~/assets/img/sidebar-2.jpg">
            <div class="sidebar-wrapper">
                <div class="logo">
                    <a href="@Url.Action("Index", "Student")" class="simple-text">
                        <i class="pe-7s-notebook"></i>
                        CEPNOT
                    </a>
                </div>
                <ul class="nav">
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")">
                        <a href="@Url.Action("Index", "Student")">
                            <i class="pe-7s-home"></i>
                            <p>Gösterge Paneli</p>
                        </a>
                    </li>
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Notes" ? "active" : "")">
                        <a href="@Url.Action("Notes", "Student")">
                            <i class="pe-7s-note"></i>
                            <p>Haftalık Çizelge</p>
                        </a>
                    </li>
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Calendar" ? "active" : "")">
                        <a href="@Url.Action("Calendar", "Student")">
                            <i class="pe-7s-date"></i>
                            <p>Takvim</p>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="main-panel">
            <nav class="navbar navbar-default navbar-fixed">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navigation-example-2">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>
                    <div class="collapse navbar-collapse">
                        <ul class="nav navbar-nav navbar-right">
                            @{
                                if (Session["UserId"] != null)
                                {
                                    <li class="dropdown">
                                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                            @Session["Name"].ToString()
                                            <b class="caret hidden-sm hidden-xs"></b>
                                        </a>
                                        <ul class="dropdown-menu">
                                            <li>
                                                <a href="@Url.Action("UserProfileO", "Student", new { id = Session["UserId"]})">
                                                    Profil Bilgileri
                                                </a>
                                            </li>
                                            <li>
                                                <a href="@Url.Action("LogOut", "Login")">
                                                    Çıkış
                                                </a>
                                            </li>
                                        </ul>
                                    </li>
                                }

                            }
                            @if (Session["UserId"] == null)
                            {
                                <li>

                                    <a href="@Url.Action("Index","Login")" class="btn btn-default pull-right">
                                        Giriş
                                    </a>
                                    <a href="@Url.Action("SignUp","Login")" class="btn btn-default pull-right">Kayit Ol</a>
                                </li>
                            }
                            <li class="separator hidden-lg hidden-md"></li>
                        </ul>

                    </div>
                </div>
            </nav>
            <div>
                @RenderBody()
            </div>

            <footer class="footer">
                <div class="container-fluid">
                    <nav class="pull-left">
                        <ul>
                            <li>
                                <a href="#">
                                    Özet
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    Haftalık Çizelge
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    Etiketler
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    Takvim
                                </a>
                            </li>
                        </ul>
                    </nav>
                    <p class="copyright pull-right">
                        &copy;
                        <script>document.write(new Date().getFullYear())</script> <a href="@Url.Action("Index","Student")">CEPNOT</a>, Herşeyi not et..
                    </p>
                </div>
            </footer>
        </div>
    </div>
    <!--   Core JS Files   -->
    <script src="~/assets/js/jquery-1.10.2.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery-3.2.1.min.js"></script>
    <script src="~/Scripts/jquery-ui.min.js"></script>
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/assets/js/bootstrap.min.js" type="text/javascript"></script>
    <!--  Checkbox, Radio & Switch Plugins -->
    <script src="~/assets/js/bootstrap-checkbox-radio-switch.js"></script>
    <!--  Charts Plugin -->
    <script src="~/assets/js/chartist.min.js"></script>
    <!--  Notifications Plugin    -->
    <script src="~/assets/js/bootstrap-notify.js"></script>
    <!--  Google Maps Plugin    -->
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?sensor=false"></script>
    <!-- Light Bootstrap Table Core javascript and methods for Demo purpose -->
    <script src="~/assets/js/light-bootstrap-dashboard.js"></script>
    <!-- Light Bootstrap Table DEMO methods, don't include it in your project! -->
    <script src="~/assets/js/demo.js"></script>
    <!-- Benim javascript dosyam -->
    <script src="~/Scripts/myScripts/app.js"></script>
    <script src="~/Scripts/myScripts/app.js"></script>

</body>


</html>
