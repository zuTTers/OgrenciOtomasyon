@model CepNot.Models.Users
@{
    ViewBag.Title = "Kullanıcı Detayları";
}

<div class="container">
    <h2>Kullanıcı Detayları</h2>

    <div class="row">
        <div class="col-md-12">
            <ul class="list-group">
                <li class="list-group-item">ID : @Model.Id</li>
                <li class="list-group-item">Ad : @Model.Name</li>
                <li class="list-group-item">Soyad : @Model.Surname</li>
                <li class="list-group-item">Yaş : @Model.Age</li>
                <li class="list-group-item">Cinsiyet : @Model.Gender</li>
                <li class="list-group-item">Mail : @Model.Mail</li>
                <li class="list-group-item">Şifre : @Model.Password</li>
                <li class="list-group-item">Rol : @Model.Role</li>
                <li class="list-group-item">Silinmiş Mi : @Model.IsDeleted</li>
            </ul>
            @Html.ActionLink(" Geri", "Index", "Home", new { @class = "btn btn-primary" })
            @Html.ActionLink(" ", "UserEdit", "Home", new { id = Model.Id }, new { @class = "btn btn-warning pull-right fa fa-pencil" })<em class="fa fa-pencil"></em>
            @Html.ActionLink(" ", "UserDelete", "Home", new { id = Model.Id }, new { @class = "btn btn-danger pull-right fa fa-trash" })

        </div>
    </div>
</div>
<br />

